<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:simpleType name="EntityType">
    <!--Copy from Gazette.xsd - must be put into import file -->
    <xs:restriction base="xs:string">
      <xs:enumeration value="Changwat"/>
      <xs:enumeration value="Bangkok"/>
      <xs:enumeration value="Amphoe"/>
      <xs:enumeration value="Tambon"/>
      <xs:enumeration value="Khet"/>
      <xs:enumeration value="Khwaeng"/>
      <xs:enumeration value="Muban"/>
      <xs:enumeration value="ThesabanTambon"/>
      <xs:enumeration value="ThesabanMueang"/>
      <xs:enumeration value="ThesabanNakhon"/>
      <xs:enumeration value="Region"/>

      <xs:enumeration value="Unknown"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="EntityBase">
    <xs:attribute name="type" type="EntityType" use="optional" />
    <xs:attribute name="name" type="xs:string" use="optional" />
    <xs:attribute name="english" type="xs:string" use="optional" />
    <xs:attribute name="geocode" type="xs:unsignedInt" use="required" />
    <xs:attribute name="comment" type="xs:string" use="optional" />
  </xs:complexType>
  <xs:complexType name="Entity">
    <xs:complexContent>
      <xs:extension base="EntityBase">
        <xs:sequence>
          <xs:element type="Entity" name="entity" minOccurs="0" maxOccurs="unbounded"/>
          <xs:element type="ConstituencyList" name="constituencies" minOccurs="0" maxOccurs="1"/>
          <xs:element type="Election" name="election" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
    </xs:complexType>
  <xs:complexType name="EntityExclude">
    <xs:complexContent>
      <xs:extension base="EntityBase">
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  <xs:complexType name="EntityInclude">
    <xs:complexContent>
      <xs:extension base="EntityBase">
        <xs:sequence>
          <xs:element type="EntityExclude" name="exclude" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  <xs:complexType name="ConstituencyList">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="unbounded" name="constituency" type="Constituency"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="Constituency">
    <xs:sequence>
      <xs:element minOccurs="1" maxOccurs="unbounded" name="include" type="EntityInclude"/>
      <xs:element minOccurs="0" maxOccurs="1" name="election" type="Election"/>
      <xs:element minOccurs="0" maxOccurs="unbounded" name="byelection" type="ByElection"/>
    </xs:sequence>
    <xs:attribute name="index" type="xs:unsignedByte" use="required" />
    <xs:attribute name="numberofseats" type="xs:unsignedByte" use="optional" default="1"/>
    <xs:attribute name="comment" type="xs:string" use="optional"/>
  </xs:complexType>
  <xs:complexType name="ElectionData">
    <xs:sequence>
      <xs:element type="PartyList" name="parties" minOccurs="0" maxOccurs="1"/> 
      <xs:element type="Entity" name="entity" minOccurs="1" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>
  <xs:element type="ElectionData" name="electiondata"/>

  <xs:complexType name="Party">
    <xs:attribute name="name" type="xs:string"/>
    <xs:attribute name="english" type="xs:string"/>
    <xs:attribute name="id" type="xs:nonNegativeInteger"/>
  </xs:complexType>
  <xs:complexType name="PartyList">
    <xs:sequence>
      <xs:element name="party" type="Party" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="PartyListResultEntry">
    <xs:attribute name="id" type="xs:nonNegativeInteger" use="required"/>
    <xs:attribute name="votes" type="xs:positiveInteger" use="required"/>
  </xs:complexType>
  <xs:complexType name="PartyListResult">
    <xs:sequence>
      <xs:element name="party" type="PartyListResultEntry" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="invalidvotes" type="xs:positiveInteger" />
    <xs:attribute name="abstainvotes" type="xs:positiveInteger" />
  </xs:complexType>
  <xs:simpleType name="ElectionStatus">
    <xs:restriction base="xs:string">
      <xs:enumeration value="elected"/>
      <xs:enumeration value="redcard"/>
      <xs:enumeration value="yellowcard"/>
      <xs:enumeration value="disqualified"/>
      <xs:enumeration value="resigned"/>
      <xs:enumeration value="died"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="Candidate">
    <xs:attribute name="party" type="xs:nonNegativeInteger" use="optional"/>
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="title" type="xs:string" use="optional"/>
    <xs:attribute name="english" type="xs:string" use="optional"/>
    <xs:attribute name="status" type="ElectionStatus" use="optional"/>
    <xs:attribute name="comment" type="xs:string" use="optional"/>
  </xs:complexType>
  <xs:complexType name="CandidateListEntry">
    <xs:complexContent>
      <xs:extension base="Candidate">
        <xs:attribute name="id" type="xs:nonNegativeInteger" use="required"/>
        <xs:attribute name="votes" type="xs:positiveInteger" use="optional"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  <xs:complexType name="PartyCandidateListEntry">
    <xs:complexContent>
      <xs:extension base="Candidate">
        <xs:attribute name="index" type="xs:nonNegativeInteger" use="required"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  <xs:complexType name="PartyCandidateList">
    <xs:sequence>
      <xs:element name="candidate" type="PartyCandidateListEntry" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="party" type="xs:nonNegativeInteger"/>
  </xs:complexType>
  <xs:complexType name="CandidateList">
    <xs:sequence>
      <xs:element name="candidate" type="CandidateListEntry" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="invalidvotes" type="xs:positiveInteger" />
    <xs:attribute name="abstainvotes" type="xs:positiveInteger" />
  </xs:complexType>
  <xs:simpleType name="ByElectionReason">
    <xs:restriction base="xs:string">
      <xs:enumeration value="redcard"/>
      <xs:enumeration value="yellowcard"/>
      <xs:enumeration value="resignation"/>
      <xs:enumeration value="death"/>
      <xs:enumeration value="disqualification"/>
      <xs:enumeration value="other"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="ByElection">
    <xs:sequence>
      <xs:element name="candidates" type="CandidateList" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
    <xs:attribute name="date" type="xs:date" use="optional"/>
    <xs:attribute name="eligiblevoter" type="xs:nonNegativeInteger" use="optional"/>
    <xs:attribute name="reason" type="ByElectionReason"/>    
  </xs:complexType>

  <xs:complexType name="Election">
    <xs:sequence>
      <xs:element name="partylist" type="PartyCandidateList" minOccurs="0" maxOccurs="unbounded"/>
      <xs:element name="partylistresult" type="PartyListResult" minOccurs="0" maxOccurs="1"/>
      <xs:element name="candidates" type="CandidateList" minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
    <xs:attribute name="date" type="xs:date" use="optional"/>
    <xs:attribute name="eligiblevoter" type="xs:nonNegativeInteger" use="optional"/>
  </xs:complexType>  
</xs:schema>